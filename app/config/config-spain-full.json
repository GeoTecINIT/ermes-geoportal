{

  "appName": "regional-prototype",
  "pageTitle": "ERMES Regional Rice Service Web Applications",
  "mapOptions": {
    "basemap": "hybrid",
    "center": [-0.3, 39.3],
    "autoResize": true,
    "sliderStyle": "small",
    "fadeOnZoom": true,
    "zoom": 9,
    "minZoom": 9,
    "logo": false
  }, 
  "operationalLayers": [{
    "type": "feature",
    "url": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/italy_vector_mxd/MapServer/1",
    "id" : "MunicipalitiesIT",
    "title" : "Municipalities Boundaries IT",
    "opacity" : 0.2,
    "visible" : true,
    "outFields": ["*"]
    }],
  "widgets": [{
    "name": "esri-locate",
    "type": "LocateButton",
    "path": "esri/dijit/LocateButton",
    "node": "locateButton",
    "target": "mapToolsDiv",
    "options": {
      "highlightLocation": true
      }
    }, {
    "name": "esri-scalebar",
    "type": "Scalebar",
    "path": "esri/dijit/Scalebar",
    "options": {
      "attachTo": "bottom-left",
      "scalebarStyle": "line",
      "scalebarUnit": "dual"
      }
    }, {
    "name": "esri-overviewmap",
    "type": "overviewMap",
    "path": "esri/dijit/OverviewMap",
    "options": {
      "attachTo": "bottom-right",
      "visible": true,
      "opacity": 0.2
      }
    }, {
    "name": "esri-geocoder",
    "type": "Geocoder",
    "path": "esri/dijit/Geocoder",
    "node": "searchButton",
    "options": {
      "arcgisGeocoder": {
        "url": "http://geocode.arcgis.com/arcgis/rest/services/World/GeocodeServer",
        "name": "Esri World Geocoder",
        "placeholder": "Enter address"
      }
    }
  }],  
  "mosaics": [ {
      "id": "Regional Monitoring NDVI",
      "name": "Regional Monitoring NDVI",
      "url": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/2015-ES/REGIONAL_MONITORING_NDVI/ImageServer",
      "historicUrl": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/2015-ES/REGIONAL_MONITORING_NVDI_LTA/ImageServer",
      "description": "NVDI time-series dataset during 2015 fo the Italian case study.",
      "default": true
    }
  ],
  "layers": [
    {
      "id": "IT Administrative Areas",
      "name": "IT Administrative Areas",
      "url": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/Prototype/IT_Vectordata/MapServer/1",
      "description": "Feature Layer containing boundaries of the municipalities.",
      "default": false
    },
    {
      "id": "IT ERMES Regional Grid",
      "name": "IT ERMES Regional Grid",
      "url": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/Prototype/IT_Vectordata/MapServer/0",
      "description": "Feature Layer containing the Italy Reference grid.",
      "default": false
    }
  ],

  "parcelsLayer": {
    "url": "http://ermes.dlsi.uji.es:6080/arcgis/rest/services/2015-IT/IT_parcels/MapServer/0"
  }
}